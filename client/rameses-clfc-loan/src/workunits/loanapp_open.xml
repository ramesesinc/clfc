<workunit>
    <invokers>
        <invoker type="loanapp:open" caption="Loan Application" action="open" target="window"/>
        
        <invoker type="formActions" caption="Edit" action="edit" visibleWhen="#{mode=='read'}" immediate="true"/>
        <invoker type="formActions" caption="Cancel" action="cancel" visibleWhen="#{mode=='edit'}" immediate="true"/>
        <invoker type="formActions" caption="Save" action="save" visibleWhen="#{mode=='edit'}"/> 
    </invokers>
    
    <code class="com.rameses.clfc.loan.controller.LoanAppController"/>
    
    <pages>
        <page template="com.rameses.clfc.loan.LoanAppPage"/> 
        <page template="com.rameses.clfc.loan.LoanAppBlankPage" name="blankpage"/> 
    </pages>
</workunit>