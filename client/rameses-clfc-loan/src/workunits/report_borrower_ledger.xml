        <invoker type="formActions" action="view" caption="View" mnemonic="v" shortcut="ctrl V" visibleWhen="#{mode == 'mgmt'}"/>
        
        <invoker type="formActions" action="back" caption="Back" mnemonic="b" shortcut="ctrl B" visibleWhen="#{mode == 'view'}"/>
        <invoker type="formActions" action="viewHistory" caption="View History" mnemonic="h" shortcut="ctrl H" visibleWhen="#{mode == 'view'}"/>
    </invokers>
    
    <code class="com.rameses.clfc.report.controller.BorrowerLedgerReportController"/>
    
     <pages>
