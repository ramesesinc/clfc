<workunit>
    <invokers>
        <invoker folderid="/menu/txn/loan" caption="Post Payments" index="3"/>
        
        <invoker type="formActions" action="close" caption="Close" mnemonic="c" shortcut="ctrl C" visibleWhen="#{mode == 'init'}" immediate="true"/>
        <invoker type="formActions" action="next" caption="Next" mnemonic="n" shortcut="ctrl N" visibleWhen="#{mode == 'init'}"/>
        
        <invoker type="formActions" action="back" caption="Back" mnemonic="b" shortcut="ctrl B" visibleWhen="#{mode == 'mgmt'}"/>
        <invoker type="formActions" action="post" caption="Post" mnemonic="p" shortcut="ctrl P" visibleWhen="#{isAllowPost}"/>
    </invokers>
    
    <code class="com.rameses.clfc.loan.payment.PostPaymentController"/>
    
    <pages>
        <page template="com.rameses.clfc.loan.payment.PostPaymentInitPage"/>
        <page template="com.rameses.clfc.loan.payment.PostPaymentMgmtPage" name="mgmtpage"/>
    </pages>
</workunit>