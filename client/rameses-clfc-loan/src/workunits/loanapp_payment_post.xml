<workunit>
    <invokers>
        <invoker folderid="/menu/txn/loan" caption="Post Payments" role="LOAN_CAO_OFFICER" index="3"/>
        
        <invoker type="formActions" action="close" caption="Close" mnemonic="c" 
            shortcut="ctrl W" visibleWhen="#{mode == 'read'}" immediate="true"/>
            
        <invoker type="formActions" action="next" caption="Next" mnemonic="n" 
            shortcut="ctrl N" visibleWhen="#{mode == 'read'}"/>
        
        <invoker type="formActions" action="back" caption="Back" mnemonic="b" 
            shortcut="ctrl B" visibleWhen="#{mode == 'mgmt'}"/>
        <invoker type="formActions" action="post" caption="Post" mnemonic="p" 
            shortcut="ctrl P" visibleWhen="#{isAllowPost}" 
            icon="images/toolbars/save.png"/>
    </invokers>
    
    <code class="com.rameses.clfc.loan.payment.PostPaymentController"/>
    
    <pages>
        <page template="com.rameses.clfc.loan.payment.PostPaymentInitPage"/>
        <page template="com.rameses.clfc.loan.payment.PostPaymentMgmtPage" name="mgmtpage"/>
    </pages>
</workunit>