"entity.*" [mode != 'edit']{
    enabled: false; 
    background-color: rgb(250,250,250);
}
"borrower" [mode != 'edit']{
    enabled: false; 
    background-color: rgb(250,250,250);
}
"borrower" [mode == 'edit']{
    enabled: true;
    background-color: #fff;
}
"entity.relation" [borrower?.type != 'PRINCIPAL'] {
    visible:true;
}
"entity.relation" [borrower?.type == 'PRINCIPAL'] {
    visible:false;
}
