import com.rameses.annotations.*;
import com.rameses.common.*;
import com.rameses.services.extended.*;
import java.rmi.server.UID;

class HolidayEventCalendarService extends ActiveCrudListService 
{	
	@ActiveDB(value='holiday_event_calendar')
	def em;

	@Service('DateService')
	def dateSvc;
	
	@ProxyMethod 
	public List getColumns( params ) {
		return [
			[name:'date', caption:'Date', type:'date', width:80, maxWidth:80],
			[name:'name', caption:'Name'],
			[name:'description', caption:'Description'],
			//spacer
			[name:null, caption:''] 
		];
	}

	public void beforeList(params) {
		params.searchtext = (params.searchtext? params.searchtext: '')+'%';		
	}

	public void beforeCreate(data) {
		data.dtcreated = dateSvc.serverDate.toString();
	}
}
